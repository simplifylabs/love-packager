{
  "name": "love-packager",
  "version": "1.2.19",
  "description": "CLI to package your LÃ–VE projects",
  "author": "Simplify Labs @simplifylabs",
  "bin": {
    "love-packager": "./bin/run"
  },
  "homepage": "https://github.com/simplifylabs/love-packager",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "git://github.com/simplifylabs/love-packager",
  "files": [
    "/bin",
    "/dist",
    "/assets",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.1",
    "chalk": "4.0.0",
    "cli-progress": "^3.10.0",
    "copy": "^0.3.2",
    "fs-extra": "^10.0.1",
    "glob": "^7.2.0",
    "icon-gen": "^3.0.0",
    "joi": "^17.6.0",
    "love.js": "^11.3.1",
    "mv": "^2.1.1",
    "rcedit": "^3.0.1",
    "request": "^2.88.2",
    "slugify": "^1.6.5",
    "spinnies": "^0.5.1",
    "unzipper": "^0.10.11",
    "yaml": "^1.10.2",
    "zip-a-folder": "^1.1.3"
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/cli-progress": "^3.9.2",
    "@types/cli-spinners": "^1.3.0",
    "@types/copy": "^0.3.2",
    "@types/fs-extra": "^9.0.13",
    "@types/mv": "^2.1.2",
    "@types/node": "^16.9.4",
    "@types/ora": "^3.2.0",
    "@types/request": "^2.48.8",
    "@types/unzipper": "^0.10.5",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.2",
    "globby": "^11",
    "oclif": "^2",
    "shx": "^0.3.3",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "oclif": {
    "bin": "love-packager",
    "dirname": "love-packager",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "prepare": "npx crlf --set=LF node_modules/.bin/love.js",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/simplifylabs/love-packager/issues",
  "keywords": [
    "games",
    "love",
    "cli",
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
